{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017"
		],
		"allowJs": true,
		"jsx": "react",
		"sourceMap": true,
		"outDir": "./dist",

		/* Strict Type-Checking Options */
		"strict": true,
		"allowSyntheticDefaultImports": true,

		/* Disable "any" error */
		"noImplicitAny": false
	},
	"include": [
		"./src",
		"./test",
		"./typings/**/*",
		"./mocks"
	],
	"exclude": [
		"./node_modules/imapflow/**/*"
	]
}
